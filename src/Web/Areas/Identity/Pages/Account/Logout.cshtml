@page
@using Microsoft.eShopWeb.Web.Areas.Identity.Pages.Account
@model LogoutModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Logout";
}
<section class="esh-catalog-hero">
    <div class="container">
        <img class="esh-catalog-title" src="~/images/main_banner_text.png" />
    </div>
</section>
<div class="container">
    <div class="row">
        <div class="col-md-6 col-sm-12">
            <h1 class="mb-4">Sign out</h1>
            <form method="post" class="esh-form">
                <p>Are you sure you want to sign out?</p>
                <button type="submit" class="btn esh-basket-checkout">[ Logout ]</button>
                <a asp-page="/Account/Login" class="btn esh-basket-checkout ms-2">[ Cancel ]</a>
            </form>
        </div>
    </div>
</div>
